@using CoreDemo.Controllers
@model List<Class2>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Adı Soyadı</th>
		<th>Sil</th>
		<th>Düzenle</th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>@item.ID</td>
			<td>@item.Name</td>
			<td><a href="/EmployeTest/DeleteEmployee/@item.ID" class="btn btn-outline-danger">Sil</a></td>
			<td><a href="/EmployeTest/EditEmployee/@item.ID" class="btn btn-outline-success">Düzenle</a></td>

		</tr>
	}
</table>
<a href="/EmployeTest/AddEmployee/" class="btn btn-outline-primary">Yeni çalışan Girişi</a>


